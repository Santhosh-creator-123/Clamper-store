<%- include('../partials/header') %>

  <section class="hero-section">
    <div class="hero-content">
      <h1>Timeless Elegance.<br>Pure Health.</h1>
      <p>Handcrafted Copper Wedding Cards that purify your life<br>long after the celebration.</p>
      <div class="hero-cta">
        <a href="/products" class="btn btn-primary">Explore Collection</a>
        <a href="/login" class="btn btn-secondary" style="color: white; border-color: white;">Join Us</a>
      </div>
    </div>
  </section>

  <section class="section-padding">
    <div class="container">
      <div class="text-center mb-2">
        <h2>The Vandrenser Promise</h2>
        <p style="max-width: 700px; margin: 0 auto; color: var(--text-muted);">We blend tradition with science. Our
          copper cards are not just invitations; they are a gift of health.</p>
      </div>

      <div class="d-flex justify-between gap-2" style="flex-wrap: wrap;">
        <div
          style="flex: 1; min-width: 300px; padding: 2rem; background: var(--bg-surface); border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
          <h3 style="font-size: 1.5rem; margin-bottom: 1rem; color: var(--primary-copper);">Premium Aesthetics</h3>
          <p style="color: var(--text-muted);">Crafted from high-quality copper with intricate etching, offering a
            luxurious look usually reserved for royalty.</p>
        </div>
        <div
          style="flex: 1; min-width: 300px; padding: 2rem; background: var(--bg-surface); border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
          <h3 style="font-size: 1.5rem; margin-bottom: 1rem; color: var(--primary-copper);">Water Purification</h3>
          <p style="color: var(--text-muted);">After the event, place the copper card in your water tank. Copper
            naturally kills bacteria and purifies water.</p>
        </div>
        <div
          style="flex: 1; min-width: 300px; padding: 2rem; background: var(--bg-surface); border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
          <h3 style="font-size: 1.5rem; margin-bottom: 1rem; color: var(--primary-copper);">Eco-Friendly Tradition</h3>
          <p style="color: var(--text-muted);">Sustainable and reusable. Embrace the ancient wisdom of copper vessels in
            a modern form.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section-padding" style="background: var(--bg-secondary);">
    <div class="container">
      <div class="text-center mb-2">
        <h2>Featured Collections</h2>
      </div>
      <div class="product-grid">
        <% if (featuredProducts && featuredProducts.length> 0) { %>
          <% featuredProducts.forEach(function(product) { %>
            <div class="product-card">
              <a href="/product/<%= product.id %>" class="product-image-wrapper">
                <img src="<%= product.image %>" alt="<%= product.name %>">
              </a>
              <div class="product-details">
                <h3 class="product-title">
                  <%= product.name %>
                </h3>
                <p class="product-price">$<%= product.price.toFixed(2) %>
                </p>
                <a href="/product/<%= product.id %>" class="btn btn-secondary btn-full">View Details</a>
              </div>
            </div>
            <% }); %>
              <% } else { %>
                <p class="text-center">No products available at the moment.</p>
                <% } %>
      </div>
      <div class="text-center mt-4">
        <a href="/products" class="btn btn-primary">View All Products</a>
      </div>
    </div>
  </section>

  <%- include('../partials/footer') %>