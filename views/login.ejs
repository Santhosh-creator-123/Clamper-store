<%- include('../partials/header') %>

  <div class="auth-wrapper">
    <div class="auth-card">
      <div class="auth-header">
        <h1 class="auth-title">Welcome Back</h1>
        <p class="auth-subtitle">Sign in to your account</p>
      </div>


      <form action="/login" method="POST">
        <div class="form-group">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" class="form-control" name="username" id="email" required>
        </div>
        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="password" required>
        </div>

        <button type="submit" class="btn btn-primary btn-full mt-1">Login</button>

        <div class="text-center mt-1">
          <p style="font-size: 0.9rem; color: var(--text-muted);">New to Vandrenser? <a href="/register"
              style="color: var(--primary-copper); font-weight: 600;">Create Account</a></p>
        </div>
      </form>
    </div>
  </div>

  <%- include('../partials/footer') %>