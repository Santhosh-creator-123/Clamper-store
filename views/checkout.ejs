<%- include('../partials/header') %>

  <div class="section-padding">
    <div class="container">
      <div class="text-center mb-2">
        <h1>Checkout</h1>
      </div>

      <div class="cart-layout">
        <!-- Shipping & Payment Form -->
        <div
          style="background: var(--bg-surface); padding: 2.5rem; border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
          <h2 style="margin-bottom: 1.5rem; font-size: 1.5rem;">Shipping Information</h2>

          <form action="/order/submit" method="POST">
            <div class="form-group">
              <label for="fullname" class="form-label">Full Name *</label>
              <input type="text" id="fullname" name="fullname" class="form-control" required>
            </div>

            <div class="d-flex gap-1">
              <div class="form-group" style="flex: 1;">
                <label for="email" class="form-label">Email *</label>
                <input type="email" id="email" name="email" class="form-control" required>
              </div>
              <div class="form-group" style="flex: 1;">
                <label for="phone" class="form-label">Phone *</label>
                <input type="tel" id="phone" name="phone" class="form-control" required>
              </div>
            </div>

            <div class="form-group">
              <label for="address" class="form-label">Street Address *</label>
              <input type="text" id="address" name="address" class="form-control" required>
            </div>

            <div class="d-flex gap-1">
              <div class="form-group" style="flex: 1;">
                <label for="city" class="form-label">City *</label>
                <input type="text" id="city" name="city" class="form-control" required>
              </div>
              <div class="form-group" style="flex: 1;">
                <label for="zipcode" class="form-label">ZIP Code *</label>
                <input type="text" id="zipcode" name="zipcode" class="form-control" required>
              </div>
            </div>

            <hr style="border: 0; border-top: 1px solid var(--border-light); margin: 2rem 0;">

            <h2 style="margin-bottom: 1.5rem; font-size: 1.5rem;">Payment Information</h2>

            <div class="form-group">
              <label for="cardname" class="form-label">Cardholder Name *</label>
              <input type="text" id="cardname" name="cardname" class="form-control" required>
            </div>

            <div class="form-group">
              <label for="cardnumber" class="form-label">Card Number *</label>
              <input type="text" id="cardnumber" name="cardnumber" class="form-control"
                placeholder="0000 0000 0000 0000" required>
            </div>

            <div class="d-flex gap-1">
              <div class="form-group" style="flex: 1;">
                <label for="expiry" class="form-label">Expiry (MM/YY) *</label>
                <input type="text" id="expiry" name="expiry" class="form-control" placeholder="MM/YY" required>
              </div>
              <div class="form-group" style="flex: 1;">
                <label for="cvv" class="form-label">CVV *</label>
                <input type="text" id="cvv" name="cvv" class="form-control" placeholder="123" required>
              </div>
            </div>

            <button type="submit" class="btn btn-primary btn-full mt-2">Place Order</button>
          </form>
        </div>

        <!-- Order Summary Sidebar -->
        <div class="cart-summary-card">
          <h3 style="margin-bottom: 1.5rem;">Order Summary</h3>

          <div style="margin-bottom: 1.5rem;">
            <div class="d-flex justify-between align-center mb-1"
              style="padding-bottom: 1rem; border-bottom: 1px solid var(--border-light);">
              <div>
                <span style="font-weight: 600; display: block;">Royal Copper Invite</span>
                <small style="color: var(--text-muted);">Qty: 2</small>
              </div>
              <span style="font-weight: 500;">$80.00</span>
            </div>
          </div>

          <div class="summary-row">
            <span>Subtotal</span>
            <span>$80.00</span>
          </div>
          <div class="summary-row">
            <span>Shipping</span>
            <span>$10.00</span>
          </div>
          <div class="summary-row">
            <span>Tax</span>
            <span>$7.20</span>
          </div>

          <div class="summary-total">
            <span>Total</span>
            <span>$97.20</span>
          </div>

          <div class="mt-2 p-2"
            style="background: rgba(184, 115, 51, 0.1); border-radius: var(--radius-sm); padding: 1rem;">
            <strong style="color: var(--dark-copper); display: flex; align-items: center; gap: 0.5rem;">
              <span>ðŸ’§</span> Health Reminder
            </strong>
            <p style="font-size: 0.85rem; margin-top: 0.5rem; color: var(--dark-copper);">
              After your event, place these copper cards in water to naturally purify and enhance water quality!
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>