<%- include('../partials/header') %>

  <div class="auth-wrapper">
    <div class="auth-card">
      <div class="auth-header">
        <h1 class="auth-title">Create Account</h1>
        <p class="auth-subtitle">Join the circle of health and tradition</p>
      </div>


      <form action="/register" method="POST">
        <div class="form-group">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" class="form-control" name="username" id="email" placeholder="name@example.com" required>
        </div>
        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Min. 8 characters"
            required>
        </div>

        <button type="submit" class="btn btn-primary btn-full mt-1">Register</button>

        <div class="text-center mt-1">
          <p style="font-size: 0.9rem; color: var(--text-muted);">Already have an account? <a href="/login"
              style="color: var(--primary-copper); font-weight: 600;">Login</a></p>
        </div>
      </form>
    </div>
  </div>

  <%- include('../partials/footer') %>